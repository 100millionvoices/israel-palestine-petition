<div class="share-petition">
  <div class="share-text"><%= t('sharing.share_petition_on') %></div>
  <div class="row text-center">
    <div class="col-6 col-md-4">
      <%= link_to(facebook_sharing_url, rel: 'external', target: '_blank', class: 'facebook') do
        fa_icon('facebook', text: 'Facebook').html_safe
      end %>
    </div>
    <div class="col-6 col-md-4">
      <%= link_to(twitter_sharing_url, rel: 'external', target: '_blank', class: 'twitter') do
        fa_icon('twitter', text: 'Twitter').html_safe
      end %>
    </div>
    <div class="col-6 col-md-4">
      <%= mail_to('', subject: t('sharing.email_subject'), body: email_share_body, rel: 'external', class: 'email') do
        fa_icon('envelope-o', text: 'Email').html_safe
      end %>
    </div>
    <div class="col-6 whatsapp-share">
      <%= link_to(whatsapp_sharing_url, class: 'whatsapp', rel: 'external') do
        fa_icon('whatsapp', text: 'WhatsApp').html_safe
      end %>
    </div>
  </div>
</div>
