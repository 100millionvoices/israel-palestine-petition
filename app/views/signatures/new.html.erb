<h2 class="text-center lead">Make your voice heard</h2>

<%= form_for(@signature, html: { class: 'signature-form' }) do |f| %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: 'Name', class: 'form-control', maxlength: '100', autofocus: true %>
     <%= error_messages_for_field @signature, :name %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, placeholder: 'Email', class: 'form-control', maxlength: 255 %>
    <% if request.get? %>
      <small class="form-text text-muted">We will never share your email</small>
    <% end %>
    <%= error_messages_for_field @signature, :email %>
  </div>

  <div class="form-group">
    <%= f.text_field :place, placeholder: 'Place or city', class: 'form-control', maxlength: 50 %>
    <small class="form-text text-muted">A place or city of residence is optional</small>
    <%= error_messages_for_field @signature, :place %>
  </div>

  <div class="form-group">
    <%= f.select :country_code, country_select_options, { include_blank: 'Country' }, class: 'custom-select' %>
    <%= error_messages_for_field @signature, :country_code %>
  </div>

  <div class="text-center">
    <%= f.submit 'Sign it', class: 'btn btn-secondary sign-it-button' %>
     <small class="form-text text-muted text-center">
       To confirm your signature we send an email and ask that you click the link in it
     </small>
  </div>
<% end -%>

